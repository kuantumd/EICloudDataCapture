@model Epi.Web.MVC.Models.UserLoginModel

@{
    ViewBag.Title = "Epi Info™ Cloud Data Capture - Log In";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="pageHeader">
    <div id="pageTitle">
        <h2>Log In</h2>
    </div>
    <div id="userwelcome"></div>
    <div style="clear: both;"></div>
</div>


<div id="content" style="margin:1em;">
   
    
    <div class="Logsin">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                
                <div id="loginform" style="margin-bottom:2px; font-size:12pt; font-weight:bold;display: block;">
                     
                     <label for="Email" style="display: block;" >Email:</label>
                    @Html.TextBoxFor(m => m.UserName)
                    <label for="Passcode" style="display: block;margin-top:10px;" >Password:</label>
                    @Html.PasswordFor(m => m.Password)
                    <p><button data-theme="submit2" type="submit" value="Log in" class="default">Log In</button><br />
                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Login")</p>
                </div>
                <div id="welcome" >
                    <h3>Welcome to Epi Info™ Cloud Data Capture!</h3>
                    <p>The Epi Info™ Cloud Data Capture System is a data collection tool for public health professionals.  </p>
                    <ul style="margin:-5px 5px 5px 20px; padding:0; line-height:1.5em;">
                    <li style="margin:0px 0px 10px 0px;">Collect  data for variety of public health events.</li>
                    <li>Manage the data on the web using your PC or mobile devices.</li>    
                    </ul>
                </div>
            } 
       
    </div>
    
    <div style="clear:both;"></div>
@if (@System.Configuration.ConfigurationManager.AppSettings["SHOW_TERMS_OF_USE"].ToUpper() == "TRUE")
{
    <div id="TOU">
        <h2 class="h2header">Terms of service and conditions of use</h2>
        <div class="termsofuse">
            @Html.Raw(ViewData["TermOfUse"].ToString())
          </div>
    </div>
}
</div>
